﻿

@page "/projectConstrus/editar/{id:int}"
@using System.Net
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Editar</h3>

@if (projectConstrs is null)
{
    <p>Cargando...</p>
}
else
{
    <ProjectConstrForm @ref="projectConstrForms" ProjectConstr="ProjectConstrs" OnSubmit="Editar" ReturnAction="Return" />

}

@code {
    [Parameter]
    public int id { get; set; }
    private ProjectConstr projectConstrs;
    private ProjectConstrForm projectConstrForms;

    protected override async Task OnParametersSetAsync()
    {
        var responseHttp = await repository.GetAsync<ProjectConstr>($"/api/ProjectConstrus/{id}");
        if (responseHttp.Error)
        {
            if (responseHttp.HttpResponseMessage.StatusCode == HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/ProjectConstrus");
            }
            else
            {
                var messsage = await responseHttp.GetErrorMessage();
                await sweetAlertService.FireAsync("Error", messsage, SweetAlertIcon.Error);
            }
        }
        else
        {
            projectConstrs = responseHttp.Response;
        }
    }


    private async Task Editar()
    {
        var responseHttp = await repository.PutAsync("/api/ProjectConstrus", projectConstrs);
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessage();
            await sweetAlertService.FireAsync("Error", message);
            return;
        }

        Return();
        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {
                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000
            });
        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Cambios guardados con éxito.");
    }

    private void Return()
    {
        projectConstrForms!.FormularioPosteadoConExito = true;
        navigationManager.NavigateTo("/ProjectConstrus");
    }

}