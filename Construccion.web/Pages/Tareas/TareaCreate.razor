

@page "/Tareas/create"
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService



<h3>TAREAS CREATE</h3>

<TareaForm @ref="tareasform" Tarea="tareas" OnSubmit="Create" ReturnAction="Return"/>


@code {


    private Tarea tareas = new();
    private TareaForm tareasform;

    private async Task Create()
    {


        var responseHttp = await repository.PostAsync("/api/tareas", tareas);
        if (responseHttp.Error)
        {

            var message = await responseHttp.GetErrorMessage();
            await sweetAlertService.FireAsync("Error", message);
            return;


        }

        Return();
        var toast = sweetAlertService.Mixin(new SweetAlertOptions
            {

                Toast = true,
                Position = SweetAlertPosition.BottomEnd,
                ShowConfirmButton = true,
                Timer = 3000




            });


        await toast.FireAsync(icon: SweetAlertIcon.Success, message: "Registro creado con éxito");
    }


    private void Return()
    {
        
        navigationManager.NavigateTo("/Tareas");
        

    }

}
